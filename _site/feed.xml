  <pre class="code-snippet-pre"><code class="language-python" data-lang="python">import torch
import torch.nn as nn
import torch.optim as optim

# y = 2x + 1 데이터
x = torch.tensor([[1.0], [2.0], [3.0], [4.0]])
y = torch.tensor([[3.0], [5.0], [7.0], [9.0]])

model = nn.Linear(1, 1)
criterion = nn.MSELoss()
optimizer = optim.SGD(model.parameters(), lr=0.01)

for epoch in range(300):
    pred = model(x)
    loss = criterion(pred, y)
    optimizer.zero_grad()
    loss.backward()
    optimizer.step()

print(&quot;weight:&quot;, model.weight.item(), &quot;bias:&quot;, model.bias.item())</code></pre>
